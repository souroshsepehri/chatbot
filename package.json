{
  "name": "chatbot-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && python -m uvicorn app.main:app --reload --host 127.0.0.1 --port 8001",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:all:ps1": "powershell -ExecutionPolicy Bypass -File ./dev-all.ps1",
    "clean": "node scripts/clean.js",
    "clean:install": "npm run clean && cd apps/frontend && npm ci",
    "build:all": "cd apps/frontend && npm run build",
    "start:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd apps/backend && python -m uvicorn app.main:app --host 127.0.0.1 --port 8000",
    "start:frontend": "cd apps/frontend && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

